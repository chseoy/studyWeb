<div class="row my-5">
    <div class="col">
        <h1 class="text-center">도서검색</h1>
        <div id="div_books">

        </div>
    </div>
</div>
<script type="x-handlebars-template" id="temp_books">
    <table class="table">
        {{#each documents}}
            <tr>
                <td><img src="{{thumbnail}}" width="50"></td>
                <td><a href="{{url}}">{{title}}</a></td>
                <td>{{price}}</td>
                <td>{{authors}}</td>
            </tr>
        {{/each}}
    </table>
</script>
<script>
    getBooks();
    // 도서검색 데이터 불러오기
    function getBooks() {
        $.ajax({
            type:"get",
            url:"https://dapi.kakao.com/v3/search/book?target=title",
            headers:{"Authorization":"KakaoAK 3b06b87b5ecf6eb05c3de92d42cad9e8"},
            data:{query:"자바", page:1, size:5}, // 자바 관련한 책의 1페이지부터 5권을 보여줌
            success:function (data){
                // console.log(data);
                let temp = Handlebars.compile($("#temp_books").html());
                $("#div_books").html(temp(data));
            }
        })
    }
</script>